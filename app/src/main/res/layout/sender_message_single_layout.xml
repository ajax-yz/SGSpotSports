<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="15dp"
    android:paddingStart="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message_time_layout"
        android:layout_marginEnd="65dp"
        android:background="@drawable/sender_message_text_background"
        android:padding="15dp"
        android:text="@string/sender_message"
        android:textColor="@color/primary_text"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        android:elevation="3dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_layout"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_default_avatar"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/message_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/message_profile_layout"
        android:layout_marginEnd="65dp"
        android:text="@string/sender_time" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/message_text_layout"
        android:layout_below="@+id/message_text_layout"
        android:layout_marginStart="0dp"
        android:layout_toStartOf="@+id/message_profile_layout"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <!-- consider adding background for ImageView -->

</RelativeLayout>