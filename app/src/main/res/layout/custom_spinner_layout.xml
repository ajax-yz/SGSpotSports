<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/spinner_marker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_default_pin"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/spinner_sports_type"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/spinner_marker"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/spinner_marker"
        android:gravity="center"
        android:text="@string/type_of_sports"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>