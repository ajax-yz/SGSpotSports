<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/marker_single_pin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_default_pin" />

    <TextView
        android:id="@+id/marker_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="20dp"
        android:text="@string/facility_name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/marker_single_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/marker_single_name"
        android:layout_below="@id/marker_single_name"
        android:layout_marginTop="5dp"
        android:text="@string/facility_address" />

    <ImageView
        android:id="@+id/delete_markers_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete_pin"
        android:background="@drawable/orange_circular_background"
        android:layout_margin="13dp"
        android:elevation="7dp"/>

</RelativeLayout>